<div>
    <h1>Welcome to longest word game!</h1>
</div>

<div>
    <h3>Here is your grid:</h3>
</div>
<div class="grid">
    <% @letters.each do |letter| %>
    <div class="letter"><p><%= letter %></p></div>
    <% end  %>
</div>

<form action="/score" method="POST">
   <div class="mb-3">
    <label for="guess" class="form-label">What's your longest word?</label>
    <input type="text" class="form-control" id="guess" name="word">
  </div>
  <div>
    <button type="submit" class="btn btn-primary">Play!</button>
  <div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @letters %>
  <%= hidden_field_tag :time, Time.now %>
</form>